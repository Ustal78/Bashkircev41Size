<Window x:Class="Bashkircev41Size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bashkircev41Size"
        mc:Ignorable="d"
        Title="Bashkircev" Height="800" Width="1100" FontFamily="Comic Sans MS" Icon="/Res/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Background="#FFCC99"></Frame>
        <Image Source="/Res/logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Обувной магазин" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"
               NavigationUIVisibility="Hidden"></Frame>
        <Button Content="Назад" Name="BtnBack" Width="175" Height="30" HorizontalAlignment="Right" Margin="5" FontFamily="Comic Sans MS"
                Click="BtnBack_Click"></Button>
    </Grid>
</Window>
