<Page x:Class="Bashkircev41Size.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bashkircev41Size"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" VerticalAlignment="Center"></TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TBLogin" VerticalAlignment="Center"></TextBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:" VerticalAlignment="Center"></TextBlock>
        <PasswordBox Grid.Row="1" Grid.Column="1" Name="TBPassword" VerticalAlignment="Center"></PasswordBox>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Button Name="LoginBtn" Content="Войти" Margin="0,0,10,0" Click="LoginBtn_Click"></Button>
            <Button Name="GuestBtn" Content="Войти как гость" Margin="50,0,10,0" Click="GuestBtn_Click"></Button>
        </StackPanel>

        <TextBlock Name="TBErrorText"
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="" />
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="captchaOneWord" FontSize="22" Margin="5,0,0,0"/>
                <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="5,5,0,0"/>
                <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough" Margin="5,0,0,0"/>
                <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="5,10,0,0"/>
            </StackPanel>
            <TextBox Name="TBInputCaptcha" Height="25" Width="200" FontSize="14" Margin="0,5,0,0" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
